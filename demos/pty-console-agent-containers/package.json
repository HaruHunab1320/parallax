{
  "name": "@parallax/pty-console-agent-containers-demo",
  "version": "0.1.0",
  "private": true,
  "description": "Smoke test for containerized coding-agent PTY sessions with pty-console bridge",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "vitest run test/agent-ready.smoke.test.ts",
    "test:smoke:local": "vitest run test/agent-ready-local.smoke.test.ts",
    "test:smoke:all": "vitest run test/agent-ready.smoke.test.ts test/agent-ready-local.smoke.test.ts",
    "capture:claude": "tsx scripts/claude-state-capture.ts",
    "capture:claude:interactive": "tsx scripts/claude-interactive-capture.ts",
    "capture:gemini:interactive": "tsx scripts/gemini-interactive-capture.ts",
    "capture:codex:interactive": "tsx scripts/codex-interactive-capture.ts",
    "capture:aider:interactive": "tsx scripts/aider-interactive-capture.ts"
  },
  "dependencies": {
    "coding-agent-adapters": "workspace:*",
    "pty-console": "workspace:*",
    "pty-manager": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.7"
  }
}
