{
  "name": "@parallax/pattern-builder",
  "version": "0.1.0",
  "description": "Visual pattern builder for Parallax orchestration patterns",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@parallax/pattern-sdk": "workspace:*",
    "@xyflow/react": "^12.0.0",
    "zustand": "^4.5.0",
    "zod": "^3.23.0",
    "clsx": "^2.1.0",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "parallax",
    "pattern",
    "builder",
    "visual",
    "react-flow",
    "orchestration"
  ],
  "author": "Parallax AI",
  "license": "Apache-2.0"
}
