{
  "name": "@parallax/cli",
  "version": "0.1.0",
  "description": "Command-line interface for Parallax platform",
  "bin": {
    "parallax": "./dist/index.js",
    "parallax-dev": "./bin/parallax-dev.ts"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx watch src/index.ts",
    "parallax-dev": "tsx bin/parallax-dev.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@parallax/runtime": "workspace:*",
    "@parallax/control-plane": "workspace:*",
    "@parallax/data-plane": "workspace:*",
    "commander": "^13.0.0",
    "chalk": "^5.4.1",
    "ora": "^8.1.1",
    "inquirer": "^12.6.3",
    "table": "^6.9.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "axios": "^1.6.5",
    "ws": "^8.16.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/inquirer": "^9.0.8",
    "@types/js-yaml": "^4.0.9",
    "@types/ws": "^8.5.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
