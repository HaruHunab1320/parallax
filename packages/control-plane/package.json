    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^3.2.4",
    "dockerode": "^4.0.7",
    "prisma": "^6.12.0",
    "supertest": "^7.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
