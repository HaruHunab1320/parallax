    "@parallax/telemetry": "workspace:*",
    "@prism-lang/confidence": "^1.2.4",
    "@prism-lang/core": "^2.0.0",
    "@prism-lang/llm": "^1.3.0",
    "@prisma/client": "^6.12.0",
    "cors": "^2.8.5",
