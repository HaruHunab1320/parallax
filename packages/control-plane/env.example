# Server Configuration
NODE_ENV=production
PORT=8080
GRPC_PORT=8081
METRICS_PORT=9090

# Database Configuration
POSTGRES_USER=parallax
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=parallax
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# etcd Configuration
ETCD_ENDPOINTS=http://localhost:2379
ETCD_PREFIX=/parallax
ETCD_PORT=2379

# Logging
LOG_LEVEL=info

# Authentication (optional)
AUTH_ENABLED=false
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Pattern Engine Configuration
PATTERNS_DIR=/app/patterns
MAX_EXECUTION_TIME=300000
PATTERN_CACHE_TTL=3600

# Agent Configuration
AGENT_HEARTBEAT_INTERVAL=30000
AGENT_HEARTBEAT_TIMEOUT=90000
MAX_AGENTS_PER_PATTERN=100

# API Configuration
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000
CORS_ORIGINS=*

# Metrics Configuration
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=60000

# Docker Image Version
VERSION=latest

# Nginx Configuration (when using proxy)
NGINX_PORT=80
NGINX_SSL_PORT=443