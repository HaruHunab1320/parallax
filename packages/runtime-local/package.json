{
  "name": "@parallax/runtime-local",
  "version": "0.1.0",
  "description": "Local PTY-based runtime for Parallax CLI agents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "parallax-runtime": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@parallax/runtime-interface": "workspace:*",
    "coding-agent-adapters": "workspace:*",
    "express": "^4.21.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "pty-manager": "workspace:*",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.14.1",
    "@types/ws": "^8.5.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
