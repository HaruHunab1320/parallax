// Primitive: stream
// Category: event
// Description: Event streaming and reactive patterns
// Confidence: from-processors

// Event stream processing pattern
export const eventStream = (config) => {
  return {
    type: "eventStream",
    config: config
  } ~> 1.0
}

// Windowed aggregation pattern
export const window = (size) => {
  return (slide) => {
    return {
      type: "window",
      config: {
        size: size,
        slide: slide
      }
    } ~> 1.0
  }
}