// Primitive: fallback
// Category: control
// Description: Provide fallback options when primary fails
// Confidence: from-successful


// Fallback primitive - try alternatives in order
export const fallback = (...alternatives) => {
  return (input) => {
    return {
      type: "fallback",
      input: input,
      config: {
        alternatives: alternatives,
        stopOnSuccess: true,
        combineErrors: false
      }
    } ~> 0.9
  }
}