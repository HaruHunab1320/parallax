# Parallax Platform Configuration

# Control Plane
PORT=3000
LOG_LEVEL=info

# Registry
PARALLAX_ETCD_ENDPOINTS=localhost:2379
PARALLAX_REGISTRY=localhost:2379

# Patterns
PARALLAX_PATTERNS_DIR=./patterns

# Local Development - Agent Configuration
# Format: id:name:address:capabilities
PARALLAX_LOCAL_AGENTS=sentiment-1:SentimentAnalysis:localhost:50051:sentiment,emotion|weather-1:WeatherAnalysis:localhost:50052:weather,forecast

# Confidence Tracking
PARALLAX_CONFIDENCE_STORE=influxdb  # 'memory' or 'influxdb'

# InfluxDB Configuration (when PARALLAX_CONFIDENCE_STORE=influxdb)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=parallax-super-secret-auth-token
INFLUXDB_ORG=parallax
INFLUXDB_BUCKET=metrics
INFLUXDB_RETENTION_DAYS=30

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=parallax-control-plane
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=prometheus

# Security (for production)
PARALLAX_AUTH_ENABLED=false
PARALLAX_TLS_ENABLED=false
PARALLAX_TLS_CERT_FILE=/path/to/cert.pem
PARALLAX_TLS_KEY_FILE=/path/to/key.pem
PARALLAX_TLS_CA_FILE=/path/to/ca.pem

